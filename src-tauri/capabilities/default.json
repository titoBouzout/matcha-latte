{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "exec-sh",
					"cmd": "sh",
					"args": [
						"-c",
						{
							"validator": ".+"
						}
					]
				},
				{
					"name": "foot",
					"cmd": "foot",
					"args": [
						"-e",
						"fish",
						"-C",
						{
							"validator": ".+"
						}
					]
				}
			]
		},
		"shell:default"
	]
}
